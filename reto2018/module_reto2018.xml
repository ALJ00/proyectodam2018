<?xml version="1.0" encoding="UTF-8"?>
<project name="module_reto2018" default="compile.module.reto2018">
  <dirname property="module.reto2018.basedir" file="${ant.file.module_reto2018}"/>
  
  <property name="module.jdk.home.reto2018" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.reto2018" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.reto2018" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.reto2018" value="-encoding UTF-8 -source 1.6 -target 1.6 ${compiler.args}"/>
  
  <property name="reto2018.output.dir" value="${module.reto2018.basedir}/target/classes"/>
  <property name="reto2018.testoutput.dir" value="${module.reto2018.basedir}/target/test-classes"/>
  
  <path id="reto2018.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="reto2018.module.production.classpath">
    <path refid="${module.jdk.classpath.reto2018}"/>
    <path refid="library.ojdbc7.classpath"/>
    <path refid="library.maven:_mysql:mysql-connector-java:6.0.6.classpath"/>
    <path refid="library.maven:_org.jasypt:jasypt:1.9.2.classpath"/>
    <path refid="library.maven:_commons-validator:commons-validator:1.4.1.classpath"/>
    <path refid="library.maven:_commons-beanutils:commons-beanutils:1.8.3.classpath"/>
    <path refid="library.maven:_commons-digester:commons-digester:1.8.1.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.2.classpath"/>
    <path refid="library.maven:_commons-collections:commons-collections:3.2.1.classpath"/>
    <path refid="library.maven:_org.jfree:jfreechart:1.5.0.classpath"/>
  </path>
  
  <path id="reto2018.runtime.production.module.classpath">
    <pathelement location="${reto2018.output.dir}"/>
    <path refid="library.ojdbc7.classpath"/>
    <path refid="library.maven:_mysql:mysql-connector-java:6.0.6.classpath"/>
    <path refid="library.maven:_org.jasypt:jasypt:1.9.2.classpath"/>
    <path refid="library.maven:_commons-validator:commons-validator:1.4.1.classpath"/>
    <path refid="library.maven:_commons-beanutils:commons-beanutils:1.8.3.classpath"/>
    <path refid="library.maven:_commons-digester:commons-digester:1.8.1.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.2.classpath"/>
    <path refid="library.maven:_commons-collections:commons-collections:3.2.1.classpath"/>
    <path refid="library.maven:_org.jfree:jfreechart:1.5.0.classpath"/>
  </path>
  
  <path id="reto2018.module.classpath">
    <path refid="${module.jdk.classpath.reto2018}"/>
    <pathelement location="${reto2018.output.dir}"/>
    <path refid="library.ojdbc7.classpath"/>
    <path refid="library.maven:_mysql:mysql-connector-java:6.0.6.classpath"/>
    <path refid="library.maven:_org.jasypt:jasypt:1.9.2.classpath"/>
    <path refid="library.maven:_commons-validator:commons-validator:1.4.1.classpath"/>
    <path refid="library.maven:_commons-beanutils:commons-beanutils:1.8.3.classpath"/>
    <path refid="library.maven:_commons-digester:commons-digester:1.8.1.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.2.classpath"/>
    <path refid="library.maven:_commons-collections:commons-collections:3.2.1.classpath"/>
    <path refid="library.maven:_org.jfree:jfreechart:1.5.0.classpath"/>
  </path>
  
  <path id="reto2018.runtime.module.classpath">
    <pathelement location="${reto2018.testoutput.dir}"/>
    <pathelement location="${reto2018.output.dir}"/>
    <path refid="library.ojdbc7.classpath"/>
    <path refid="library.maven:_mysql:mysql-connector-java:6.0.6.classpath"/>
    <path refid="library.maven:_org.jasypt:jasypt:1.9.2.classpath"/>
    <path refid="library.maven:_commons-validator:commons-validator:1.4.1.classpath"/>
    <path refid="library.maven:_commons-beanutils:commons-beanutils:1.8.3.classpath"/>
    <path refid="library.maven:_commons-digester:commons-digester:1.8.1.classpath"/>
    <path refid="library.maven:_commons-logging:commons-logging:1.2.classpath"/>
    <path refid="library.maven:_commons-collections:commons-collections:3.2.1.classpath"/>
    <path refid="library.maven:_org.jfree:jfreechart:1.5.0.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.reto2018">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.reto2018">
    <patternset refid="excluded.from.module.reto2018"/>
  </patternset>
  
  <path id="reto2018.module.sourcepath">
    <dirset dir="${module.reto2018.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="reto2018.module.test.sourcepath">
    <dirset dir="${module.reto2018.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.reto2018" depends="compile.module.reto2018.production,compile.module.reto2018.tests" description="Compile module reto2018"/>
  
  <target name="compile.module.reto2018.production" depends="register.custom.compilers" description="Compile module reto2018; production classes">
    <mkdir dir="${reto2018.output.dir}"/>
    <javac2 destdir="${reto2018.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.reto2018}/javac">
      <compilerarg line="${compiler.args.reto2018}"/>
      <bootclasspath refid="reto2018.module.bootclasspath"/>
      <classpath refid="reto2018.module.production.classpath"/>
      <src refid="reto2018.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.reto2018"/>
    </javac2>
    
    <copy todir="${reto2018.output.dir}">
      <fileset dir="${module.reto2018.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.reto2018.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.reto2018.tests" depends="register.custom.compilers,compile.module.reto2018.production" description="compile module reto2018; test classes" unless="skip.tests">
    <mkdir dir="${reto2018.testoutput.dir}"/>
    <javac2 destdir="${reto2018.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.reto2018}/javac">
      <compilerarg line="${compiler.args.reto2018}"/>
      <bootclasspath refid="reto2018.module.bootclasspath"/>
      <classpath refid="reto2018.module.classpath"/>
      <src refid="reto2018.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.reto2018"/>
    </javac2>
    
    <copy todir="${reto2018.testoutput.dir}">
      <fileset dir="${module.reto2018.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.reto2018" description="cleanup module">
    <delete dir="${reto2018.output.dir}"/>
    <delete dir="${reto2018.testoutput.dir}"/>
  </target>
</project>